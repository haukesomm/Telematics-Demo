<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        style="@style/Text.Subheading.Primary"
        android:textColor="@color/colorPrimary"
        android:text="@string/fragment_privacyModeChooser_title"/>

    <Spinner
        android:id="@+id/fragment_preferences_privacy_modes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        style="@style/Text.Body1.Secondary"
        android:text="@string/fragment_privacyModeChooser_info"/>

    <Button
        android:id="@+id/fragment_preferences_privacy_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/moreInformation"/>

</LinearLayout>